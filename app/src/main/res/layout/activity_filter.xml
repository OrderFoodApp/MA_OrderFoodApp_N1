            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#ECECEC"
            android:text="All"
            android:textColor="#000000"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtCate" />

        <Button
            android:id="@+id/btnFood4"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:backgroundTint="#ECECEC"
            android:text="Bunger"
            android:textColor="#000000"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnAll" />

        <Button
            android:id="@+id/btnFood8"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:backgroundTint="#ECECEC"
            android:text="Chinese Food"
            android:textColor="#000000"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnFood4" />

        <Button
            android:id="@+id/btnFood9"
            android:layout_width="91dp"
            android:layout_height="41dp"
            android:layout_marginStart="4dp"
            android:backgroundTint="#ECECEC"
            android:text="Piza"
            android:textColor="#000000"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/btnFood8"
            app:layout_constraintStart_toEndOf="@+id/btnFood8"
            app:layout_constraintTop_toTopOf="@+id/btnFood8" />

        <Button
            android:id="@+id/btnFood10"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginStart="4dp"
            android:backgroundTint="#ECECEC"
            android:text="Salad Food"
            android:textColor="#000000"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/btnFood9"
