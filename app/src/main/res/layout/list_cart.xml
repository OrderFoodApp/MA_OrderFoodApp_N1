<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    app:cardCornerRadius="5dp"
    card_view:cardBackgroundColor="#E6E6E6"
    android:layout_margin="10dp"
    app:cardElevation="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/line_edt">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <TextView
            android:id="@+id/tvNameFC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name Food"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"></TextView>
        <TextView
            android:id="@+id/tvDesFC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            app:layout_constraintTop_toBottomOf="@id/tvNameFC"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp"></TextView>
        <TextView
            android:id="@+id/tvPriceFC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$ 150"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/tvDesFC"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp"></TextView>

        <TextView
            android:id="@+id/tvPromoFC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="40% off"
            android:textSize="18sp"
            android:textColor="@color/design_default_color_error"
            app:layout_constraintStart_toEndOf="@id/tvPriceFC"
            app:layout_constraintTop_toTopOf="@id/tvPriceFC"></TextView>

        <ImageButton
            android:id="@+id/imgBookM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bookmark"
            app:layout_constraintTop_toBottomOf="@id/tvPriceFC"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp"></ImageButton>

        <ImageButton
            android:id="@+id/imgDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/deleteicon"
            app:layout_constraintTop_toBottomOf="@id/tvPriceFC"
            app:layout_constraintStart_toEndOf="@id/imgBookM"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp"></ImageButton>
        <ImageView
            android:id="@+id/imgHinh"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:background="@drawable/login"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="10dp"></ImageView>

        <ImageButton
            android:id="@+id/imgButGiam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tru"
            app:layout_constraintTop_toTopOf="@id/tvPromoFC"
            app:layout_constraintStart_toEndOf="@id/tvPromoFC"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="15dp"></ImageButton>
        <TextView
            android:id="@+id/tvQanTy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            app:layout_constraintTop_toTopOf="@id/imgButGiam"
            app:layout_constraintStart_toEndOf="@id/imgButGiam"
            app:layout_constraintBottom_toBottomOf="@id/imgButGiam"
            android:layout_marginLeft="15dp"
            android:textColor="@color/black"></TextView>
        <ImageButton
            android:id="@+id/imgButThem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/plus"
            app:layout_constraintTop_toTopOf="@id/tvQanTy"
            app:layout_constraintBottom_toBottomOf="@id/tvQanTy"
            app:layout_constraintStart_toEndOf="@id/tvQanTy"
            android:layout_marginLeft="15dp"></ImageButton>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>