<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    app:cardCornerRadius="5dp"
    card_view:cardBackgroundColor="#E6E6E6"
    android:layout_margin="5dp"
    app:cardElevation="8dp"
    android:background="@drawable/line_edt">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <ImageView
            android:id="@+id/imgFood"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/login"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="5dp"></ImageView>
        <TextView
            android:id="@+id/tvFoodName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FoodName"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/imgFood"
            android:textColor="@color/black"
            android:layout_marginTop="2dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="2dp"></TextView>
        <TextView
            android:id="@+id/tvFoodDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            app:layout_constraintTop_toBottomOf="@id/tvFoodName"
            android:textColor="@color/black"
            android:layout_marginTop="2dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="2dp"></TextView>
        <TextView
            android:id="@+id/tvFoodPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food Price"
            app:layout_constraintTop_toBottomOf="@id/tvFoodDes"
            android:textColor="@color/black"
            android:layout_marginTop="2dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="2dp"></TextView>

        <TextView
            android:id="@+id/tvFoodPromo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="40% off"
            android:textColor="@color/design_default_color_error"
            app:layout_constraintStart_toEndOf="@id/tvFoodPrice"
            app:layout_constraintTop_toTopOf="@id/tvFoodPrice"></TextView>

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/line_edt"
            android:text="Add"
            android:textColor="#000000"
            app:backgroundTint="#4CAF50"
            app:layout_constraintBottom_toBottomOf="@id/tvFoodPrice"
            app:layout_constraintStart_toEndOf="@id/tvFoodPromo"
            app:layout_constraintTop_toTopOf="@id/tvFoodPrice"
            app:strokeColor="#000000"></Button>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>