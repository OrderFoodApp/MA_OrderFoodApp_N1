<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDetails">
    <ImageView
        android:id="@+id/imgProduct"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/anh1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"></ImageView>
    <ImageButton
        android:id="@+id/imgButBack2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/backicon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"></ImageButton>

    <TextView
        android:id="@+id/tvMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chi tiết sản phẩm"
        app:layout_constraintTop_toTopOf="@id/imgButBack2"
        app:layout_constraintBottom_toBottomOf="@id/imgButBack2"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/imgButBack2"
        android:layout_marginLeft="10dp"></TextView>
    <ImageButton
        android:id="@+id/imgButHeart2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/heart"
        app:layout_constraintEnd_toStartOf="@id/imgButCart2"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"></ImageButton>
    <ImageButton
        android:id="@+id/imgButCart2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/cart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginRight="25dp"></ImageButton>
    <TextView
        android:id="@+id/tvNameProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bánh mì"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="22dp"
        app:layout_constraintTop_toBottomOf="@id/imgProduct"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@id/imgProduct"
        android:layout_marginLeft="15dp"></TextView>
    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3.0 km"
        android:drawableLeft="@drawable/location"
        android:drawablePadding="5dp"
        android:paddingLeft="2dp"
        app:layout_constraintTop_toBottomOf="@id/tvNameProduct"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/tvNameProduct"
        android:textColor="@color/black"></TextView>

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:text="$ 150"
        android:textColor="#CF2121"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/tvLocation"
        app:layout_constraintEnd_toEndOf="@id/imgProduct"
        app:layout_constraintTop_toTopOf="@id/tvLocation"></TextView>
    <TextView
        android:id="@+id/tvShipping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Miễn phí giao hàng"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvPrice"
        app:layout_constraintEnd_toEndOf="@id/imgProduct"
        android:layout_marginRight="15dp"></TextView>
    <TextView
        android:id="@+id/tvRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.5 đánh giá"
        app:layout_constraintTop_toBottomOf="@id/tvShipping"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/tvNameProduct"
        android:layout_marginTop="5dp"></TextView>
    <TextView
        android:id="@+id/tvRatingYou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đánh giá của bạn"
        app:layout_constraintTop_toBottomOf="@id/tvShipping"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@id/tvPrice"
        android:layout_marginTop="5dp"></TextView>
    <RatingBar
        android:id="@+id/rating1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rating="4.5"
        style="@android:style/Widget.DeviceDefault.Light.RatingBar.Small"
        android:stepSize="0.1"
        app:layout_constraintTop_toBottomOf="@id/tvRating"
        app:layout_constraintStart_toStartOf="@id/tvRating"
        android:layout_marginTop="3dp"></RatingBar>
    <RatingBar
        android:id="@+id/rating2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rating="0"
        style="@android:style/Widget.DeviceDefault.Light.RatingBar.Small"
        android:stepSize="0.1"
        app:layout_constraintTop_toBottomOf="@id/tvRating"
        app:layout_constraintStart_toStartOf="@id/tvRatingYou"
        android:layout_marginTop="3dp"></RatingBar>
    <TextView
        android:id="@+id/tvDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chi tiết"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/rating1"
        app:layout_constraintStart_toStartOf="@id/tvNameProduct"
        android:layout_marginTop="10dp"></TextView>
    <TextView
        android:id="@+id/tvContents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thành phần: Bánh kem tươi cốt 5 lớp socola, \n nhân kem tươi, trang trí socola và hoa kem tươi \n hình chú sư tử"
        app:layout_constraintTop_toBottomOf="@id/tvDetails"
        app:layout_constraintStart_toStartOf="@id/tvDetails"
        android:textSize="16sp"
        android:layout_marginTop="10dp"></TextView>
    <TextView
        android:id="@+id/tvQuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số lượng: "
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@id/tvContents"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/tvNameProduct"
        android:layout_marginTop="10dp"></TextView>
    <ImageButton
        android:id="@+id/imgButTru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/tru"
        app:layout_constraintTop_toTopOf="@id/tvQuan"
        app:layout_constraintBottom_toBottomOf="@id/tvQuan"
        app:layout_constraintStart_toEndOf="@id/tvQuan"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"></ImageButton>
    <TextView
        android:id="@+id/tvQty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        app:layout_constraintTop_toTopOf="@id/imgButTru"
        app:layout_constraintStart_toEndOf="@id/imgButTru"
        app:layout_constraintBottom_toBottomOf="@id/imgButTru"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"></TextView>
    <ImageButton
        android:id="@+id/imgButCong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/plus"
        app:layout_constraintTop_toTopOf="@id/tvQuan"
        app:layout_constraintBottom_toBottomOf="@id/tvQuan"
        app:layout_constraintStart_toEndOf="@id/tvQty"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"></ImageButton>
    <TextView
        android:id="@+id/tvTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tổng tiền: "
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@id/tvQuan"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/tvNameProduct"
        android:layout_marginTop="10dp"></TextView>

    <TextView
        android:id="@+id/tvTotalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:text="$ 150.00"
        android:textColor="#CF2121"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/tvTotal"
        app:layout_constraintStart_toEndOf="@id/tvTotal"
        app:layout_constraintTop_toTopOf="@id/tvTotal"
        android:layout_marginLeft="20dp"></TextView>

    <Button
        android:id="@+id/btnAddCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Thêm giỏ hàng"
        android:textColor="#000000"
        app:backgroundTint="#FFFFFF"
        app:layout_constraintStart_toStartOf="@id/tvTotal"
        app:layout_constraintTop_toBottomOf="@id/tvTotal"></Button>

    <Button
        android:id="@+id/btnOrder"
        android:layout_width="148dp"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="25dp"
        android:text="Đặt hàng"
        app:backgroundTint="#FF004D"
        app:layout_constraintStart_toEndOf="@id/btnAddCart"
        app:layout_constraintTop_toBottomOf="@id/tvTotal"></Button>
</androidx.constraintlayout.widget.ConstraintLayout>