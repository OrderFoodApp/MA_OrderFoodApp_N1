<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#6A6161"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="1036dp"
        android:layout_height="match_parent"
        android:backgroundTint="#E91E63"
        tools:context=".MainActivity">

        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/food"
            android:layout_width="605dp"
            android:layout_height="614dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="218dp"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="228dp"
            app:srcCompat="@drawable/food" />

        <ImageView
            android:id="@+id/google"
            android:layout_width="137dp"
            android:layout_height="119dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="97dp"
            android:layout_marginBottom="73dp"
            app:srcCompat="@drawable/google" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="134dp"
            android:layout_height="122dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="145dp"
            android:layout_marginBottom="65dp"
            app:srcCompat="@drawable/facebook" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="140dp"
            android:layout_height="130dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="139dp"
            android:layout_marginEnd="217dp"
            android:layout_marginBottom="68dp"
            android:layout_toStartOf="@+id/google"
            android:layout_toEndOf="@+id/imageView3"
            app:srcCompat="@drawable/github" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="190dp"
            android:layout_height="103dp"
            android:layout_above="@+id/imageView5"
            android:layout_alignStart="@+id/textView"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="42dp"
            android:layout_toStartOf="@+id/line2"
            android:text="Hoặc"
            android:textSize="60dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/line"
            android:layout_width="357dp"
            android:layout_height="17dp"
            android:layout_above="@+id/imageView3"
            android:layout_marginEnd="61dp"
            android:layout_marginBottom="100dp"
            android:layout_toStartOf="@+id/textView"
            android:backgroundTint="#040404" />

        <Button
            android:id="@+id/line2"
            android:layout_width="357dp"
            android:layout_height="17dp"
            android:layout_above="@+id/google"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="95dp"
            android:backgroundTint="#040404" />

        <TextView
            android:id="@+id/dangky"
            android:layout_width="511dp"
            android:layout_height="98dp"
            android:layout_above="@+id/textView"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="292dp"
            android:layout_marginEnd="233dp"
            android:layout_marginBottom="7dp"
            android:text="Đăng ký tài khoản?"
            android:textSize="50dp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/dangnhap"
            android:layout_width="639dp"
            android:layout_height="80dp"
            android:layout_above="@+id/dangky"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="190dp"
            android:layout_marginEnd="207dp"
            android:layout_marginBottom="31dp"
            android:background="#E91E63"
            android:backgroundTint="#E91E63"
            android:text="Đăng nhập"
            android:textSize="30dp"
            android:textStyle="bold" />


    </RelativeLayout>


</RelativeLayout>